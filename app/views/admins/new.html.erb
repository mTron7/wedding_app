<div class="title">
  <p>Sign up</p>
</div>
<%= form_for(@admin) do |u| %>  
<br /><br />
<div class="field"> 
<table class="form-table">
  <tr>
      <td>First name: </td>
      <td><%= u.text_field :first_name %></td>
  </tr>
  <tr>
      <td>Last name: </td>
      <td><%= u.text_field :last_name %></td>
  </tr>
  <tr>
      <td>Email: </td>
      <td><%= u.text_field :email %></td>
  </tr>
  <tr>
      <td>Password: </td>
      <td><%= u.password_field :password %></td> 
  </tr>
  <tr>
      <td>Confirm Password: </td>
      <td><%= u.password_field :password_confirmation %></td> 
  </tr>
</table>
 <br /><br />
  <%= u.submit "Create", id: "btn-login" %> 
</div> 
<% end %>

<br /><br /><br /><%= link_to 'Back to Admin page', all_responses_path %>